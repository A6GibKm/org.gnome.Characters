{
    "app-id": "org.gnome.Characters",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "command": "gnome-characters",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "gnome-desktop",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddebug-tools=false",
                "-Dudev=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-desktop/41/gnome-desktop-41.0.tar.xz",
                    "sha256": "69cb1d3d9a10700eb66348ef1c0e66a855fc5a97ae62902df97a499da11562d2",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-desktop"
                    }
                }
            ]
        },
        {
            "name": "libunistring",
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/libunistring/libunistring-0.9.10.tar.xz",
                    "sha256": "eb8fb2c3e4b6e2d336608377050892b54c3c983b646c561836550863003c05d7"
                }
            ]
        },
        {
            "name": "gnome-characters",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-characters/41/gnome-characters-41.0.tar.xz",
                    "sha256": "e129eca93d0099490bc2bfe6437e685fd9855e264b32fb918c0e58ee6aac867b",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gnome-characters"
                    }
                }
            ]
        }
    ]
}