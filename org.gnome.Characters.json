{
    "app-id" : "org.gnome.Characters",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.34",
    "command" : "gnome-characters",
    "sdk" : "org.gnome.Sdk",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--metadata=X-DConf=migrate-path=/org/gnome/Characters/"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a",
        "/share/doc",
        "/share/gir-1.0"
    ],
    "modules" : [
        {
            "name" : "gnome-desktop",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddebug-tools=false",
                "-Dudev=disabled"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gnome-desktop/3.34/gnome-desktop-3.34.4.tar.xz",
                    "sha256" : "c53e72737cc21535f2fd4b72bc2fb5594741cfc3d3ce90949bc5cc07bade0cbc"
                }
            ]
        },
        {
            "name" : "libunistring",
            "cleanup" : [
                "/share"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ftp.gnu.org/gnu/libunistring/libunistring-0.9.10.tar.xz",
                    "sha256" : "eb8fb2c3e4b6e2d336608377050892b54c3c983b646c561836550863003c05d7"
                }
            ]
        },
        {
            "name" : "gnome-characters",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gnome-characters/3.34/gnome-characters-3.34.0.tar.xz",
                    "sha256" : "14438572ee2a99305a5d514d83237c01e873a7bb7dfff5478bbb327894ee0a57"
                },
                {
                    "type": "patch",
                    "paths": [
                        "appdata-simplify-OARS-data.patch",
                        "appdata-add-releases.patch"
                    ]
                }
            ]
        }
    ]
}
